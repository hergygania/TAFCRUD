@{
    ViewData["Title"] = "Home Page";
}
@model List<Inspiro.Models.KaryawanModel>

<div class="text-center">
    <h1 class="display-4">Employee List</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Nama</th>
                <th>NIK</th>
                <th>Posisi</th>
                <th>Tgl Lahir</th>
                <th>Divisi</th>
                <th>Jenis Kelamin</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nama</td>
                    <td>@item.NIK</td>
                    <td>@item.Posisi</td>
                    <td>@Convert.ToDateTime(item.Tgl_Lahir).ToString("dd MMMM yyyy")</td>
                    <td>@item.Divisi</td>
                    <td>@item.JenisKelamin</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Home" asp-action="Create" class="btn btn-info">New Employee</a>

</div>
